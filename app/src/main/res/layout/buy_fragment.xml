<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardBackground">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/background"
                    android:contentDescription="TODO" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Product Name"
                android:textColor="@color/primaryText"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Price"
                android:textColor="#118C4F"
                android:textSize="20dp" />



            <TextView
                android:id="@+id/product_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/product_seller_tag"
                android:fontFamily="@font/ubuntu_bold"
                android:fontStyle="italic"
                android:text="Seller"
                android:textColor="@color/primary"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/product_seller_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Seller Name | "
                android:textColor="@color/primaryText"

                android:textSize="15dp" />



            <TextView
                android:id="@+id/product_date_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_seller_tag"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Item Listed On | "
                android:textColor="@color/primaryText"

                android:textSize="15dp" />

            <TextView
                android:id="@+id/product_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_seller"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/product_date_tag"
                android:fontFamily="@font/ubuntu_bold"
                android:text=" Date"
                android:textColor="@color/primary"
                android:textSize="15dp" />



            <TextView
                android:id="@+id/verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_date_tag"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Buy2Sell Verified Seller "
                android:textColor="@color/primaryText"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageVerified"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@+id/product_date"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/verified" />



            <TextView
                android:id="@+id/Description_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verified"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:fontStyle="italic"
                android:text="Description"
                android:textColor="@color/primaryText"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Description_tag"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp"
               android:fontFamily="@font/ubuntu_bold"
                android:textColor="@color/secondaryText"
                android:hint="Description"
                android:textSize="15dp"
                android:visibility="gone" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/offer_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/round_corner_button"
        android:duplicateParentState="true"
        android:fontFamily="@font/ubuntu_bold"
        android:paddingLeft="10dp"
        android:text="Buy"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:duplicateParentState="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/white"
        android:text="Delete"
        android:visibility="gone"/>

    <Button
        android:id="@+id/msg_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_180sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/round_corner_button"
        android:duplicateParentState="true"
        android:fontFamily="@font/ubuntu_bold"
        android:paddingStart="5dp"
        android:paddingRight="10dp"
        android:text="REPORT"
        android:textColor="@color/white" />

</RelativeLayout>